@model IPagedList<Models.Category>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3 class="text-center">Category</h3>
<div class="pagination-container">
    @Html.PagedListPager(Model, page => Url.Action("Users", new { page }))
</div>
<div class="row">
    <div class="col-md-10"></div>
    <div class="col-md-2">
        <a class="btn btn-success " data-toggle="modal" data-target="#ModalCategory" data-dismiss="modal">
            <i class="fas fa-plus"></i>New
        </a>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                CategoryName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a href="#">Edit </a> |
                    <a href="#">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal " id="ModalCategory" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Create new category</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                Category Name
                <input type="text" id="category" class="form-control" placeholder="" />
                <span style="display:none;color:red" id="cat-validation">Please enter category Name</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="saveCategory()">Save</button>
            </div>
        </div>

    </div>
</div>